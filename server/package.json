{
  "name": "@ctrl-k/server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --exit-child --respawn src/index.ts",
    "test": "TZ='America/New_York' jest",
    "test:replay": "TZ='America/New_York',POLLY_MODE=replay jest",
    "codegen": "graphql-codegen --config ./codegen.yaml"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "2.11.4-alpha-c88238a3e.0",
    "@graphql-codegen/typescript": "^2.7.2",
    "@graphql-codegen/typescript-resolvers": "latest",
    "@pollyjs/adapter-fetch": "^6.0.5",
    "@pollyjs/adapter-node-http": "^6.0.5",
    "@pollyjs/core": "^6.0.5",
    "@pollyjs/persister-fs": "^6.0.5",
    "@types/debug": "^4.1.7",
    "@types/jest": "^26.0.23",
    "@types/node": "18.7.17",
    "@types/ramda": "^0.28.15",
    "@types/setup-polly-jest": "^0.5.1",
    "@types/supertest": "^2.0.12",
    "babel-jest": "^28.1.3",
    "cross-env": "7.0.3",
    "dotenv": "^16.0.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "graphql-config": "^4.3.5",
    "jest": "^28.1.3",
    "jest-extended": "^3.1.0",
    "prettier": "2.7.1",
    "setup-polly-jest": "^0.11.0",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.ts"
    ],
    "rootDir": "./",
    "transform": {
      "^.+\\.test.ts?$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "setupFiles": [
      "dotenv/config"
    ],
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "moduleNameMapper": {
      "@ctrl-k/core": "<rootDir>/src/core",
      "@ctrl-k/config": "<rootDir>/src/config"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@blockfrost/blockfrost-js": "^5.0.0",
    "@emurgo/cardano-serialization-lib-nodejs": "^11.0.5",
    "@graphql-tools/schema": "^9.0.4",
    "@graphql-yoga/node": "^2.13.13",
    "axios": "^0.27.2",
    "dataloader": "^2.1.0",
    "debug": "^4.3.4",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.18.0",
    "json-bigint-patch": "^0.0.8",
    "lru_map": "^0.4.1",
    "ramda": "^0.28.0",
    "uuid": "^9.0.0"
  }
}
